{
  "name": "@interledger/rafiki-core",
  "version": "0.2.3",
  "description": "Core modules needed to construct a connector.",
  "engines": {
    "node": ">=10.13"
  },
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "scripts": {
    "build": "tsc -p src/tsconfig.build.json",
    "clean": "rm -Rf .nyc_output && rm -Rf coverage && rm -Rf build ",
